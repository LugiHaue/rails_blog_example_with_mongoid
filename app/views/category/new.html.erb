              <div class="row mt">
                  <div class="col-md-12">
                  <h4><i class="fa fa-angle-right"></i> New Category</h4>

                  <% unless @category.blank? %>

                    <% if @category.invalid? %>

                      <ul class="list-group">

                      <% @category.errors.each do |field , message| %>
                          <li class="list-group-item list-group-item-danger"><strong><%= field %></strong> <%= message %></li>
                      <% end %>

                  </ul>

                  <% end %>
                  
                <% end %>

                      <div class="content-panel">
                      <%= form_tag(category_index_url , {method: 'post' , role: 'form'}  ) do %>

                          <div class="form-group col-md-8">
                            <label for="name">Name:</label>
                            <input type="text" name="name" class="form-control" id="name">
                          </div>

                      <div class="clearfix"></div>

                          <div class="form-group col-md-8">
                            <label for="order">Order:</label>
                            <input type="text" name="order" class="form-control" id="order">
                          </div>

                      <div class="clearfix"></div>
                        
                         <div class="form-group col-md-8">
                          <label for="category">Status:</label>
                          <select class="form-control" name="status" id="category">
                              <option value="" selected="selected" >Please choose a status</option>
                              <option value="true">Active</option>
                              <option value="false">Passive</option>
                          </select>
                        </div>

                      <div class="clearfix"></div>

                        <div class="form-group col-md-8">
                          <input class="btn btn-success" type="submit" value="Save">
                        </div>
                      
                      <div class="clearfix"></div>

                      <% end %>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div><!-- /row -->

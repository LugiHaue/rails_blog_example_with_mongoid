              <div class="row mt">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> <%= @heading %> Posts</h4>
                            <hr>
                              <thead>
                              <tr>
                                  <th><i class=" fa fa-edit"></i> No</th>
                                  <th class="hidden-phone"><i class="fa fa-bullhorn"></i> Title</th>
                                  <th><i class="fa fa-bookmark"></i> Category</th>
                                  <th><i class="fa fa-question-circle"></i> Status</th>
                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
                              <% @posts.each do |post| %>
                              <tr>
                                  <td><a href="#"><%= @no = @no + 1 %></a></td>
                                  <td class="hidden-phone"><%= truncate(post.title , length:30) %></td>
                                  <td><%= truncate(post.category.name , length:20) %></td>
                                  <td>
                                    <% if post.is_active %>
                                      <span class="label label-success label-mini">active</span>
                                    <% else  %>
                                      <span class="label label-warning label-mini">passive</span>
                                    <% end %>
                                  </td>
                                  <td>
                                      <a href="<%= pPostStatus_url(post) %>" class="btn btn-<%= post.is_active ? 'success' : 'warning' %> btn-xs"><i class="fa fa-check"></i></a>
                                      <a href="<%= pPostEdit_url(post) %>" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                      <a href="<%= pPostDelete_url(post) %>" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                  </td>
                              </tr>
                              <% end %>
                              </tbody>
                          </table>

                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->

                  <div class="col-md-12">

                      <div class="pagination">
                        <li><%= link_to_previous_page @posts, 'Prev' , :params => {'show' => @show} %></li>
                        <li><%= link_to_next_page @posts, 'Next' , :params => {'show' => @show} %></li>
                      </div>

                  </div>

              </div><!-- /row -->

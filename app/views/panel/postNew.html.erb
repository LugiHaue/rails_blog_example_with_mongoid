              <div class="row mt">
                  <div class="col-md-12">
                  <h4><i class="fa fa-angle-right"></i> New Post</h4>

                      <div class="content-panel">

                      <%= form_tag({controller: 'panel' , action: 'postNew' } , {method: 'post' , multipart: true ,  role: 'form'}  ) do %>

                          <div class="form-group col-md-8">
                            <label for="title">Title:</label>
                            <input type="text" name="title" class="form-control" id="title">
                          </div>

                        <div class="clearfix"></div>

                         <div class="form-group col-md-8">
                          <label for="body">Content:</label>
                          <textarea class="form-control" rows="5" name="body" id="body"></textarea>
                        </div>
                    
                      <div class="clearfix"></div>

                         <div class="form-group col-md-8">
                          <label for="category">Category list:</label>
                          <select class="form-control" name="category_id" id="category">
                              <option value="" selected="selected" >Please choose a category</option>
                            <% @categories.each do |category| %>

                              <option value="<%= category.id %>"><%= category.name %></option>

                            <% end %>
                          </select>
                        </div>

                      <div class="clearfix"></div>

                        <div class="form-group col-md-8">
                            <label for="tags">Tags:</label>
                            <input type="text" name="tags" class="form-control" id="tags">
                          </div>

                      <div class="clearfix"></div>


                         <div class="form-group col-md-8">
                          <label for="category">Status:</label>
                          <select class="form-control" name="is_active" id="category">
                              <option value="" selected="selected" >Please choose a status</option>
                              <option value="true">Active</option>
                              <option value="false">Passive</option>
                          </select>
                        </div>

                      <div class="clearfix"></div>

                        <div class="form-group col-md-8">
                          <label for="exampleInputFile">Post image</label>
                          <input type="file" name="image" id="exampleInputFile">
                          <p class="help-block">Image must be 300x500 </p>
                            <div class="checkbox">
                              <label>
                                <input name="image" type="checkbox"> No image
                              </label>
                            </div>
                        </div>

                      <div class="clearfix"></div>
                        
                        <div class="form-group col-md-8">
                          <input class="btn btn-success" type="submit" value="Save">
                        </div>
                      
                      <div class="clearfix"></div>

                      <% end %>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div><!-- /row -->
